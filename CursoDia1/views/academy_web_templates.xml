<?xml version ="1.0" encoding="utf-8"?>
<odoo>
	<data>
        <template id="course_website">
            <t t-call="website.layaout">
                <t t-set="title">Academia</t>
                <div class="oe_structure">
                    <div class="container">
                        <h1>Cursos</h1>
                        <t t-foreach="Courses" t-as="course">
                            <h3>
                                <t t-esc="course.id" />
                                <t t-esc="course.name" />
                            </h3>
                            <p>
                                Descripcion:
                                <span t-field="course.description" />
                            </p>
                            <p>
                                Nivel:
                                <span t-field="course.level" />
                            </p>
                            
                            <strong>Sesiones</strong>
                            <t t-foreach="course.sessions_ids" t-as="session">
                                <p>
                                    <a t-attf-href="/academy/{{ slug(session)}}">
                                        <t t-esc="session.name" />
                                    </a>
                                </p>
                                <p>
                                    Ultima modificacion:
                                    <i t-field="session.write_date" t-field-options='{"format":"long"}' />
                                </p>
                            </t>
                            <t t-if="not course.sessions_ids">
                                <p>Sin sesion actual</p>
                            </t>
                        </t>
                    </div>
                </div>
            </t>
        </template>
        
        <template id="session_website">
            <t t-call="website.layout">
                <t t-set="title">Sesion</t>
                <div class="oe_structure">
                    <div class="container">
                        <h3 t-field="session.name" />
                        <p>
                            Ultima modificacion:
                            <i t-field="session.write_date" t-field-options='{"format":"long"}' />
                        </p>
                        <p>
                            Curso:
                            <t t-esc="session.course_id.name" />
                        </p>
                        <h3>Estudiantes:</h3>
                        <ul>
                            <t t-foreach="session.students_ids" t-as="student">
                                <li>
                                    <span t-field="student.name" />
                                </li>
                            </t>
                        </ul>
                    </div>
                </div>
            </t>
        </template>
	</data>
</odoo>